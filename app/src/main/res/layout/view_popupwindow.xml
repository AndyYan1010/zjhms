<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_ef"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.bt.Smart.Hox.viewmodle.MyListView
                android:id="@+id/lv_cshome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.bt.Smart.Hox.viewmodle.MyListView>

            <RelativeLayout
                android:id="@+id/rtv_sthome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:minHeight="50dp">

                <ImageView
                    android:id="@+id/img_shome"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/set_home"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_shome"
                    android:text="家庭管理"
                    android:textColor="@color/vm_black_100"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:padding="3dp"
                    android:src="@drawable/me_next2"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>