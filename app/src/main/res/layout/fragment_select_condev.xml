<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_ef"
              android:clickable="true"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <include layout="@layout/title_view_img"/>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_dev"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_wifi_device"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_dev"
            android:text="控制智能设备"
            android:textColor="@color/word_black"
            android:textSize="14sp"/>
    </RelativeLayout>

    <com.bt.Smart.Hox.viewmodle.MyListView
        android:id="@+id/lv_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.bt.Smart.Hox.viewmodle.MyListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_scene"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/color_scene"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_scene"
            android:text="场景"
            android:textColor="@color/word_black"
            android:textSize="14sp"/>
    </RelativeLayout>
    <com.bt.Smart.Hox.viewmodle.MyListView
        android:id="@+id/lv_sce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.bt.Smart.Hox.viewmodle.MyListView>
</LinearLayout>